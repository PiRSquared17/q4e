<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.maven</groupId>
  <artifactId>maven-artifact-reversion</artifactId>
  <version>3.0-R659801</version>
  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pom-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <executions>
          <execution>
            <configuration>
              <projectFile>${basedir}/pom.xml</projectFile>
              <xpath>//project/version</xpath>
              <newValue>${pom.version}</newValue>
            </configuration>
            <id>reversion</id>
            <phase>process-resources</phase>
            <goals>
              <goal>alter-by-xpath</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
