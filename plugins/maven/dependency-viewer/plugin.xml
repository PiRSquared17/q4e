<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension point="org.eclipse.ui.popupMenus">
       <objectContribution
             adaptable="true"
             id="org.devzuz.q.maven.ui.project.menu"
             objectClass="org.eclipse.core.resources.IProject">
          <filter
               name="projectNature"
               value="org.devzuz.q.maven.jdt.core.mavenNature">
          </filter>
           <action
                class="org.devzuz.q.maven.dependency.actions.ViewDependencyGraphAction"
                enablesFor="1"
                icon="src/main/resources/icons/dependency-view.gif"
                id="org.devzuz.q.maven.dependency.actions.ViewDependencyGraphAction"
                label="View dependencies"
                menubarPath="org.devzuz.q.maven.ui.project.submenu/contents"/>
     </objectContribution>

     </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.devzuz.q.maven.ui"
            name="Apache Maven">
      </category>
      <view
            category="org.devzuz.q.maven.ui"
            class="org.devzuz.q.maven.dependency.views.DependencyGraphView"
            icon="src/main/resources/icons/dependency-view.gif"
            id="org.devzuz.q.maven.dependency.actions.ViewDependencyGraphAction.view"
            name="View dependencies">
      </view>
   </extension>

</plugin>
