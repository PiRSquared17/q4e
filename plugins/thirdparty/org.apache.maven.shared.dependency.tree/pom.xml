<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.devzuz.q.plugins</groupId>
    <artifactId>parent</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>
  <groupId>org.apache.maven.shared.dependency</groupId>
  <artifactId>tree</artifactId>
  <version>${dependency.tree.bundle.version}</version>
  <packaging>bundle</packaging>
  <name>Maven Dependency Tree</name>

  <build>
<!-- doesn't work with bundle plugin see https://issues.apache.org/jira/browse/FELIX-400
    <resources>
      <resource>
        <directory>${basedir}</directory>
        <targetPath>.</targetPath>
        <includes>
          <include>LICENSE.txt</include>
        </includes>
      </resource>
    </resources>
-->
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Eclipse-RegisterBuddy>org.apache.maven.embedder</Eclipse-RegisterBuddy>
            <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
            <Include-Resource>LICENSE.txt,NOTICE.txt</Include-Resource>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.maven.shared</groupId>
      <artifactId>maven-dependency-tree</artifactId>
      <version>1.1</version>
    </dependency>
  </dependencies>
</project>
